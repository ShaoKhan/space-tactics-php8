{% block mainmenu %}
    <section id="header">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <h1>
                        <a href="{{ path('index') }}" id="logo">
                            <img src="{{ asset('img/logo.png') }}" alt="Space-Tactics Logo">
                        </a>
                    </h1>

                    <nav id="nav">
                        <div class="col-lg-12">
                            <a href="#">Nachrichten</a>
                            <a href="#">Metall: {{ planets.0.metal|number_format(0,',','.') }}</a>
                            <a href="#">Kristall: {{ planets.0.crystal|number_format(0,',','.') }}</a>
                            <a href="#">Deuterium: {{ planets.0.deuterium|number_format(0,',','.') }}</a>
                            <a href="#">DM: {{ planets.0.darkmatter|number_format(0,',','.') }}</a>
                            {% if app.user is not null %}
                                <a href="{{ path('logout') }}" class="text-danger">Logout</a>
                            {% endif %}
                        </div>
                        <div class="col-lg-12">
                            <div class="col-lg-4 planet-switcher">

                                <select name="planet" class="form-control planet-switcher-select">
                                    {% for planet in selectPlanets %}
                                        <option
                                                value="{{ planet.id }}"
                                                class="text-center"
                                                {{ planet.id == selectedPlanet ? 'selected' : '' }}
                                        >
                                            {{ planet.name }}
                                            [{{ planet.systemX }}:{{ planet.systemY }}:{{ planet.systemZ }}]
                                        </option>
                                    {% endfor %}
                                </select>

                            </div>
                        </div>
                    </nav>


                </div>
            </div>
        </div>
    </section>
{% endblock %}