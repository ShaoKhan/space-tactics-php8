{% block mainmenu %}
    <section id="header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>
                        <a href="{{ path('index') }}" id="logo">
                            <img src="{{ asset('img/logo.png') }}" alt="Space-Tactics Logo">
                        </a>
                    </h1>
                    <nav id="nav">
                        <div class="col-lg-12">
                            {% if selectedPlanet is defined %}
                                <a href="#">{{ 'messages'|trans({},'ui') }}</a>
                                <a class="metal" href="#">{{ 'metal'|trans({},'resources') }}
                                    : {{ selectedPlanet.metal|number_format(0,',','.') }}</a>
                                <a href="#">{{ 'crystal'|trans({},'resources') }}
                                    : {{ selectedPlanet.crystal|number_format(0,',','.') }}</a>
                                <a href="#">{{ 'deuterium'|trans({},'resources') }}
                                    : {{ selectedPlanet.deuterium|number_format(0,',','.') }}</a>
                                <a href="#">{{ 'darkmatter'|trans({},'resources') }}
                                    : {{ selectedPlanet.darkmatter|number_format(0,',','.') }}</a>
                            {% else %}
                                <h3>In einer Zeitschleife gefangen landest du mitten im Nirgendwo.</h3>
                            {% endif %}
                            {% if app.user is not null %}
                                <a href="{{ path('logout') }}" class="text-danger">Logout</a>
                            {% endif %}
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>
{% endblock %}